<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="110dp"

        android:background="@drawable/content"
        android:backgroundTint="#202020"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/cardim"
                android:layout_width="80dp"
                android:layout_height="90dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:src="@drawable/novtel1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cardGlav"
                android:layout_width="200dp"
                android:layout_height="40dp"

                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="Смартфон Xiaomi Redmi Note 12 256 ГБ голубой"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@+id/cardim"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/cardim"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/Cardcena"
                android:layout_width="110dp"
                android:layout_height="50dp"

                android:layout_marginTop="1dp"
                android:background="@drawable/gradient2"
                android:drawableEnd="@drawable/info"
                android:drawableTint="#767876"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:paddingEnd="4dp"
                android:text="22 499₽"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="17dp"
                app:layout_constraintEnd_toEndOf="@+id/cardGlav"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/cardim"
                app:layout_constraintTop_toBottomOf="@+id/cardGlav" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>