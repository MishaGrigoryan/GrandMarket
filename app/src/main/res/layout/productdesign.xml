<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="10dp"
    android:layout_marginRight="2dp"
    android:layout_marginLeft="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="190dp"

        app:cardCornerRadius="20dp"
        android:background="@drawable/content"
        android:backgroundTint="#202020"
        >


        <ImageView
            android:id="@+id/cardim"
            android:layout_width="110dp"
            android:layout_height="120dp"
            android:layout_marginLeft="15dp"

            android:layout_marginTop="5dp"
            android:src="@drawable/novtel1" />

        <TextView
            android:id="@+id/cardGlav"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:text="Смартфон Xiaomi Redmi Note 12 256 ГБ голубой"
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/CardPob"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="60dp"
            android:text="ядер - 8x(2.8 ГГц), 8 ГБ, 2 SIM, AMOLED, 2400x1080, камера 50+8+2 Мп, NFC, 4G, GPS, FM, 5000 мА*ч"
            android:textColor="#B8B8B8"
            android:textSize="9dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Cardcena"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="11dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/gradient2"

                android:drawableEnd="@drawable/info"
                android:drawableTint="#767876"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:text="22 499₽"
                android:paddingEnd="4dp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/white"
                android:textSize="17dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardisb1"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"

                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/stroke1"

                android:drawableTop="@drawable/heartgreen"

                android:paddingTop="10dp"
                android:onClick="Isb1"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cardbut1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/gradient1"
                android:text="Купить"
                android:textColor="@color/white"
                android:onClick="Stranica1"



                android:textSize="12dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>